<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/handlePlexConnectNavbar.js)}}" />
    <script src="{{URL(:/js/updateXML.js)}}" />
  </head>
  <body>
    <viewWithNavigationBar id="PlexConnect_Navigation" onNavigate="loadMenuPage(event)"
                           volatile="true" onVolatileReload="updatePage('{{URL()}}/PlexConnect.xml&amp;PlexConnectUDID=' + atv.device.udid);">
      <navigation currentIndex="{{VAL($showplaylists:0:False=0|True=1)}}">
      
        <navigationItem id="Playlists">
          <title>{{TEXT(Playlists)}}</title>
          <url>{{URL(:/PMS(all)/playlists::PlexConnect=Playlists_{{EVAL('{{VAL($playlistview)}}'.replace(' ', ''))}})}}</url>
        </navigationItem>{{CUT($showplaylists:CUT:False=CUT|True=)}}
        
        <navigationItem id="Library">
          <title>{{TEXT(Library)}}</title>
          <url>{{URL(:/PMS(owned)/library/sections::PlexConnect=Main_Library_{{EVAL('{{VAL($libraryview)}}'.replace(' ', ''))}})}}</url>
          </navigationItem>{{CUT($library_merge:CUT:checked=CUT|unchecked=)}}
          
          <navigationItem id="Libraries">
            <title>{{TEXT(All Libraries)}}</title>
            <url>{{URL(:/PMS(all)/library/sections::PlexConnect=Main_Libraries_{{EVAL('{{VAL($librariesview)}}'.replace(' ', ''))}})}}</url>
        </navigationItem>{{CUT($myplex_auth:CUT:=CUT| =)}}{{CUT($library_merge:CUT:unchecked=CUT|checked=)}}

        
        <navigationItem id="Channels">
          <title>{{TEXT(Channels)}}</title>
          <url>{{URL(:/PMS(owned)/channels/all::PlexConnect=Channels_{{EVAL('{{VAL($channelview)}}'.replace(' ', ''))}})}}</url>
        </navigationItem>{{CUT($showchannels:CUT:False=CUT|True=)}}{{CUT($library_channels::checked=CUT|unchecked=)}}
        
        <navigationItem id="SharedLibraries">
          <title>{{TEXT(Shared Libraries)}}</title>
          <url>{{URL(:/PMS(shared)/library/sections::PlexConnect=Main_SharedLibrary_{{EVAL('{{VAL($libraryview_remote)}}'.replace(' ', ''))}})}}</url>
        </navigationItem>{{CUT($myplex_auth:CUT:=CUT| =)}}{{CUT($showsharedlibraries:CUT:False=CUT|True=)}}{{CUT($library_merge:CUT:checked=CUT|unchecked=)}}
        
        <navigationItem id="Settings">
          <title>{{TEXT(Settings)}}</title>
          <url>{{URL(:/::PlexConnect=Settings_Main)}}</url>
        </navigationItem>
      </navigation>
    </viewWithNavigationBar>
  </body>
</atv>
